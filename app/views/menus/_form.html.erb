<%= form_with model: menu, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "食事の名称" %><br />
    <%= f.text_field :title, id:"menu_title" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "総カロリー" %><br />
    <%= f.text_area :catch_copy, class: :form__text, id:"menu_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "栄養素" %><br />
    <%= f.text_area :concept, class: :form__text, id:"menu_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "食事の画像" %><br />
    <%= f.file_field :image, id:"menu_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>